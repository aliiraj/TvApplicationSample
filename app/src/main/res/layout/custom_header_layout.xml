<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.leanback.widget.SearchOrbView
        android:id="@+id/search_orb"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:transitionGroup="true"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:paddingStart="48dp" />

    <AnalogClock
        android:id="@+id/clock"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="6dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="24dp" />

    <TextView
        android:id="@+id/title_tv"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_width="wrap_content"
        android:text="@string/androidx_startup"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:textColor="#FF5722"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/clock" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_toStartOf="@id/title_tv"
        android:layout_alignTop="@id/clock"
        android:layout_alignBottom="@id/clock"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/app_icon_your_company"/>

</RelativeLayout>
